---
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../../consts';

const posts = (await getCollection('blog'))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<BaseLayout title={`${SITE_TITLE} — Blog`} description={SITE_DESCRIPTION}>
  <section class="pagehead">
    <p class="pill">Blog</p>
    <h1>Posts</h1>
    <p class="lead">Korte how-to’s, notes en experimenten. Nieuwste bovenaan.</p>
  </section>

  <section>
    <ul class="grid">
      {posts.map((post) => (
        <li class="card">
          <a class="cardlink" href={`${import.meta.env.BASE_URL}blog/${post.id}/`}>
            {post.data.heroImage && (
              <div class="thumb">
                <Image width={1200} height={600} src={post.data.heroImage} alt="" />
              </div>
            )}

            <div class="content">
              <h2 class="title">{post.data.title}</h2>
              <p class="meta">
                <FormattedDate date={post.data.pubDate} />
              </p>
              {post.data.description && <p class="desc">{post.data.description}</p>}
            </div>
          </a>
        </li>
      ))}
    </ul>
  </section>

  <style>
    .pagehead {
      padding: 0.5rem 0 1.75rem;
    }

    .pill {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      font-size: 0.85rem;
      padding: 0.35rem 0.7rem;
      border: 1px solid rgba(255, 255, 255, 0.14);
      background: rgba(255, 255, 255, 0.06);
      border-radius: 999px;
      color: rgba(255, 255, 255, 0.85);
      backdrop-filter: blur(8px);
    }

    h1 {
      margin: 0.9rem 0 0.6rem;
      font-size: clamp(2.1rem, 4.2vw, 3rem);
      line-height: 1.05;
      letter-spacing: -0.02em;
      color: #f8fafc;
      text-shadow:
        0 0 12px rgba(56, 189, 248, 0.35),
        0 0 28px rgba(167, 139, 250, 0.25);
    }

    .lead {
      margin: 0;
      max-width: 70ch;
      color: rgba(255, 255, 255, 0.72);
      font-size: 1.05rem;
    }

    .grid {
      list-style: none;
      padding: 0;
      margin: 0;
      display: grid;
      gap: 1rem;
      grid-template-columns: repeat(12, 1fr);
    }

    .card {
      grid-column: span 12;
      border: 1px solid rgba(255, 255, 255, 0.12);
      border-radius: 1.2rem;
      background: rgba(255, 255, 255, 0.06);
      overflow: hidden;
      box-shadow: 0 12px 30px rgba(0, 0, 0, 0.25);
      transition: transform 0.15s ease, border-color 0.15s ease, background 0.15s ease;
    }

    .card:hover {
      transform: translateY(-2px);
      border-color: rgba(255, 255, 255, 0.22);
      background: rgba(255, 255, 255, 0.08);
    }

    .cardlink {
      display: block;
      text-decoration: none;
      color: inherit;
    }

    .thumb :global(img) {
      display: block;
      width: 100%;
      height: auto;
    }

    .content {
      padding: 1rem 1.1rem 1.1rem;
    }

    .title {
      margin: 0;
      font-size: 1.25rem;
      line-height: 1.25;
    }

    .meta {
      margin: 0.5rem 0 0.7rem;
      color: rgba(255, 255, 255, 0.62);
      font-size: 0.95rem;
    }

    .desc {
      margin: 0;
      color: rgba(255, 255, 255, 0.72);
    }

    @media (min-width: 720px) {
      .card {
        grid-column: span 6;
      }
    }
  </style>
</BaseLayout>
