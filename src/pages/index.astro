---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog'))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 6);

const [featured, ...rest] = posts;
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header />
    <main class="wrapper">
      <section class="hero">
        <p class="pill">Live â€” Microsoft / Azure / AI playground</p>
        <h1>SynqIT Microsoft Lab</h1>
        <p class="lead">
          Korte, eerlijke posts over Microsoft dingen die ik bouw, test en soms per ongeluk stuk maak.
          Stap voor stap â€” zonder poeha.
        </p>

        <div class="actions">
          <a class="btn primary" href={`${import.meta.env.BASE_URL}blog/`}>Lees de blog</a>
          <a class="btn" href={`${import.meta.env.BASE_URL}about/`}>Over mij</a>
        </div>
      </section>

      <section class="latest">
        <div class="sectionhead">
          <h2>Latest posts</h2>
          <a class="subtlelink" href={`${import.meta.env.BASE_URL}blog/`}>See all â†’</a>
        </div>

        {posts.length === 0 ? (
          <p class="empty">No posts yet â€” coming soon ðŸ™‚</p>
        ) : (
          <>
            {featured && (
              <article class="featured">
                <a class="cardlink" href={`${import.meta.env.BASE_URL}blog/${featured.id}/`}>
                  <div class="featuredtop">
                    <span class="badge">Featured</span>
                    <span class="metasmall">
                      {featured.data.pubDate.toLocaleDateString('en-GB', {
                        year: 'numeric',
                        month: 'short',
                        day: '2-digit',
                      })}
                    </span>
                  </div>

                  <h3 class="featuredtitle">{featured.data.title}</h3>
                  {featured.data.description && <p class="desc">{featured.data.description}</p>}
                  <p class="readmore">Read â†’</p>
                </a>
              </article>
            )}

            <ul class="postgrid">
              {rest.map((post) => (
                <li class="card">
                  <a class="cardlink" href={`${import.meta.env.BASE_URL}blog/${post.id}/`}>
                    <p class="meta">
                      {post.data.pubDate.toLocaleDateString('en-GB', {
                        year: 'numeric',
                        month: 'short',
                        day: '2-digit',
                      })}
                    </p>
                    <h3>{post.data.title}</h3>
                    {post.data.description && <p class="desc">{post.data.description}</p>}
                  </a>
                </li>
              ))}
            </ul>
          </>
        )}
      </section>
    </main>
    <Footer />
  </body>
</html>

<style>
  :global(body) {
    background:
      radial-gradient(1200px 600px at 20% 0%, rgba(56, 189, 248, 0.18), transparent 60%),
      radial-gradient(900px 500px at 80% 20%, rgba(167, 139, 250, 0.18), transparent 55%),
      linear-gradient(to bottom, #020617, #0b1220 60%, #020617);
    color: rgba(255, 255, 255, 0.92);
  }

  .wrapper {
    max-width: 1000px;
    margin: 0 auto;
    padding: 3rem 1.25rem;
  }

  .hero {
    padding: 1.5rem 0 2.35rem;
  }

  .pill {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.85rem;
    padding: 0.35rem 0.7rem;
    border: 1px solid rgba(255, 255, 255, 0.14);
    background: rgba(255, 255, 255, 0.06);
    border-radius: 999px;
    color: rgba(255, 255, 255, 0.85);
    backdrop-filter: blur(8px);
  }

  h1 {
    margin: 0.9rem 0 0.75rem;
    font-size: clamp(2.2rem, 4.6vw, 3.35rem);
    line-height: 1.04;
    letter-spacing: -0.02em;
  }

  .lead {
    margin: 0 0 1.35rem;
    max-width: 65ch;
    color: rgba(255, 255, 255, 0.72);
    font-size: 1.05rem;
  }

  .actions {
    display: flex;
    gap: 0.75rem;
    flex-wrap: wrap;
    margin-top: 1.1rem;
  }

  .btn {
    display: inline-block;
    padding: 0.75rem 1.05rem;
    border-radius: 1rem;
    border: 1px solid rgba(255, 255, 255, 0.16);
    background: rgba(255, 255, 255, 0.06);
    text-decoration: none;
    color: rgba(255, 255, 255, 0.9);
    transition: transform 0.15s ease, background 0.15s ease, border-color 0.15s ease;
  }

  .btn:hover {
    transform: translateY(-1px);
    background: rgba(255, 255, 255, 0.09);
    border-color: rgba(255, 255, 255, 0.26);
  }

  .btn.primary {
    background: rgba(56, 189, 248, 0.18);
    border-color: rgba(56, 189, 248, 0.35);
    font-weight: 650;
  }

  .latest {
    margin-top: 2.25rem;
    padding-top: 1.75rem;
    border-top: 1px solid rgba(255, 255, 255, 0.12);
  }

  .sectionhead {
    display: flex;
    align-items: baseline;
    justify-content: space-between;
    gap: 1rem;
    margin-bottom: 1rem;
  }

  .latest h2 {
    font-size: 1.6rem;
    margin: 0;
  }

  .subtlelink {
    color: rgba(255, 255, 255, 0.68);
    text-decoration: none;
    border-bottom: 1px solid rgba(255, 255, 255, 0.22);
    padding-bottom: 2px;
  }

  .subtlelink:hover {
    color: rgba(56, 189, 248, 0.95);
    border-bottom-color: rgba(56, 189, 248, 0.45);
  }

  .empty {
    color: rgba(255, 255, 255, 0.72);
  }

  /* Featured */
  .featured {
    border: 1px solid rgba(56, 189, 248, 0.22);
    border-radius: 1.4rem;
    background: linear-gradient(
      135deg,
      rgba(56, 189, 248, 0.16),
      rgba(167, 139, 250, 0.10) 55%,
      rgba(255, 255, 255, 0.05)
    );
    box-shadow: 0 18px 45px rgba(0, 0, 0, 0.32);
    overflow: hidden;
    margin-bottom: 1rem;
  }

  .featured .cardlink {
    padding: 1.25rem 1.25rem 1.15rem;
  }

  .featuredtop {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
    margin-bottom: 0.85rem;
  }

  .badge {
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
    font-size: 0.8rem;
    padding: 0.35rem 0.6rem;
    border-radius: 999px;
    border: 1px solid rgba(56, 189, 248, 0.35);
    background: rgba(56, 189, 248, 0.14);
    color: rgba(255, 255, 255, 0.9);
  }

  .metasmall {
    font-size: 0.9rem;
    color: rgba(255, 255, 255, 0.65);
  }

  .featuredtitle {
    margin: 0;
    font-size: 1.55rem;
    letter-spacing: -0.01em;
  }

  .readmore {
    margin: 0.9rem 0 0;
    color: rgba(56, 189, 248, 0.95);
    font-weight: 600;
  }

  /* Grid */
  .postgrid {
    list-style: none;
    padding: 0;
    margin: 0;
    display: grid;
    gap: 0.9rem;
    grid-template-columns: repeat(12, 1fr);
  }

  .card {
    grid-column: span 12;
    border: 1px solid rgba(255, 255, 255, 0.12);
    border-radius: 1.2rem;
    background: rgba(255, 255, 255, 0.06);
    overflow: hidden;
    box-shadow: 0 12px 30px rgba(0, 0, 0, 0.25);
    transition: transform 0.15s ease, border-color 0.15s ease, background 0.15s ease;
  }

  .card:hover {
    transform: translateY(-2px);
    border-color: rgba(255, 255, 255, 0.22);
    background: rgba(255, 255, 255, 0.08);
  }

  .cardlink {
    display: block;
    padding: 1.05rem 1.1rem;
    text-decoration: none;
    color: inherit;
  }

  .cardlink h3 {
    margin: 0.25rem 0 0.55rem;
    font-size: 1.15rem;
    line-height: 1.25;
  }

  .meta {
    margin: 0;
    font-size: 0.9rem;
    color: rgba(255, 255, 255, 0.6);
  }

  .desc {
    margin: 0;
    color: rgba(255, 255, 255, 0.72);
  }

  @media (min-width: 720px) {
    .card {
      grid-column: span 6;
    }
  }
</style>
