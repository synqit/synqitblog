---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog'))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 5);
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header />
    <main class="wrapper">
      <section class="hero">
        <p class="pill">Live â€” Microsoft / Azure / AI playground</p>
        <h1>SynqIT Microsoft Lab</h1>
        <p class="lead">
          Korte, eerlijke posts over Microsoft dingen die ik bouw, test en soms per ongeluk stuk maak.
                  </p>

        <div class="actions">
          <a class="btn primary" href={`${import.meta.env.BASE_URL}blog/`}>Lees de blog</a>
          <a class="btn" href={`${import.meta.env.BASE_URL}about/`}>Over mij</a>
        </div>
      </section>

      <section class="latest">
        <h2>Latest posts</h2>

        {posts.length === 0 ? (
          <p>No posts yet â€” coming soon ðŸ™‚</p>
        ) : (
          <ul class="postlist">
            {posts.map((post) => (
              <li class="card">
                <a class="cardlink" href={`${import.meta.env.BASE_URL}/blog/${post.id}/`}>
                  <h3>{post.data.title}</h3>
                  <p class="meta">
                    {post.data.pubDate.toLocaleDateString('en-GB', {
                      year: 'numeric',
                      month: 'short',
                      day: '2-digit',
                    })}
                  </p>
                  {post.data.description && <p class="desc">{post.data.description}</p>}
                </a>
              </li>
            ))}
          </ul>
        )}

        <p class="more">
          <a href={`${import.meta.env.BASE_URL}/blog/`}>See all posts â†’</a>
        </p>
      </section>
    </main>
    <Footer />
  </body>
</html>

<style>
  .wrapper {
    max-width: 980px;
    margin: 0 auto;
    padding: 2.5rem 1.25rem;
  }
  .hero {
    padding: 1.25rem 0 2rem;
  }
  .pill {
    display: inline-block;
    font-size: 0.85rem;
    padding: 0.35rem 0.65rem;
    border: 1px solid rgba(0,0,0,0.12);
    border-radius: 999px;
    margin: 0 0 1rem;
    opacity: 0.85;
  }
  h1 {
    margin: 0 0 0.75rem;
    font-size: clamp(2rem, 4vw, 3rem);
    line-height: 1.05;
  }
  .lead {
    margin: 0 0 1.25rem;
    max-width: 65ch;
    opacity: 0.85;
    font-size: 1.05rem;
  }
  .actions {
    display: flex;
    gap: 0.75rem;
    flex-wrap: wrap;
    margin-top: 1rem;
  }
  .btn {
    display: inline-block;
    padding: 0.7rem 1rem;
    border-radius: 0.9rem;
    border: 1px solid rgba(0,0,0,0.12);
    text-decoration: none;
  }
  .btn.primary {
    font-weight: 600;
  }
  .latest {
    margin-top: 2rem;
    padding-top: 1.5rem;
    border-top: 1px solid rgba(0,0,0,0.12);
  }
  .postlist {
    list-style: none;
    padding: 0;
    margin: 1rem 0 0;
    display: grid;
    gap: 0.9rem;
  }
  .card {
    border: 1px solid rgba(0,0,0,0.12);
    border-radius: 1.1rem;
    overflow: hidden;
  }
  .cardlink {
    display: block;
    padding: 1rem 1.1rem;
    text-decoration: none;
  }
  .meta {
    margin: 0.35rem 0 0.5rem;
    font-size: 0.9rem;
    opacity: 0.7;
  }
  .desc {
    margin: 0;
    opacity: 0.85;
  }
  .more {
    margin-top: 1rem;
  }
</style>
