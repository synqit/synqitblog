---

import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
  </head>
  <body>
    <Header />
    <main class="wrapper">
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style>
  :global(body) {
    background:
      radial-gradient(1200px 600px at 20% 0%, rgba(56, 189, 248, 0.18), transparent 60%),
      radial-gradient(900px 500px at 80% 20%, rgba(167, 139, 250, 0.18), transparent 55%),
      linear-gradient(to bottom, #020617, #0b1220 60%, #020617);
    color: rgba(255, 255, 255, 0.92);
  }

  .wrapper {
    max-width: 1000px;
    margin: 0 auto;
    padding: 3rem 1.25rem;
  }

  h1 {
    color: #f8fafc;
    text-shadow:
      0 0 12px rgba(56, 189, 248, 0.35),
      0 0 28px rgba(167, 139, 250, 0.25);
  }
</style>
